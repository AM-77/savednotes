{
  "name": "savednotes-server",
  "version": "1.0.0",
  "description": "The savednotes server with Node, Express & MySQL",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "nyc mocha ./app/tests",
    "lint:check": "eslint . --ignore-path ./.eslintignore --color",
    "lint:fix": "eslint . --ignore-path ./.eslintignore --color --fix",
    "format": "prettier . --write --ignore-path ./.prettierignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn lint:fix"
    ]
  },
  "keywords": [
    "mysql",
    "nodejs",
    "express",
    "api",
    "server"
  ],
  "author": "AM-77",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.17.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2"
  },
  "engines": {
    "node": "14.x"
  }
}
